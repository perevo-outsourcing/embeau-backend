# EMBEAU API Configuration

# Application
APP_NAME="EMBEAU API"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://embeau:embeau@localhost:5432/embeau

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# OpenAI API (for emotion analysis and insights)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# ML Models (local PyTorch models on GPU server)
USE_LOCAL_MODELS=true
MODELS_DIR=models
BISENET_WEIGHTS=models/79999_iter.pth
EMOTION_MODEL_WEIGHTS=models/best_densenet121_rafdb.pth

# External Services (fallback when local models unavailable)
COLOR_TONE_API_URL=http://localhost:8001

# RAG System
RAG_PDF_PATH=data/color.pdf
RAG_SIMILARITY_THRESHOLD=0.64

# Research Logging
LOG_USER_ACTIONS=true
LOG_RETENTION_DAYS=365
